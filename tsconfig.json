{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "./types"],
    "sourceMap": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "lib"
  ]
}